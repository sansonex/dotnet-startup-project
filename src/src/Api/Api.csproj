        <Nullable>enable</Nullable>
        <ImplicitUsings>false</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <AssemblyName>TServiceNameT.Api</AssemblyName>
        <RootNamespace>TServiceNameT.Api</RootNamespace>
        <PackageId>Globo.TServiceNameT.Api</PackageId>
